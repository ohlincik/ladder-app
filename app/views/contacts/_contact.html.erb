<tr>
	<% if contact.rank == 0 %>
		<td class="text-center"><span class="label label-info">new</span></td>
	<% else %>
		<td class="text-center"><%= contact.rank %></td>
	<% end %>
		<td><%= contact.name %></td>
	<% if contact.show_contact_info? %>
		<td class="hidden-xs"><a href="mailto:<%= contact.email %>"><%= contact.email %></a></td>
		<td><%= display_phone(contact.phone) %></td>
		<td align="right">
			<%= link_to contact_path(contact), class: 'btn btn-default btn-xs' do %>
				details &raquo;
			<% end %>
		</td>
	<% else %>
		<td class="hidden-xs text-muted"><i class="fa fa-eye-slash"></i> private</td>
		<td class="text-muted"><i class="fa fa-eye-slash"></i> private</td>
		<td>&nbsp;</td>
	<% end %>
</tr>