<% content_for :title do %>
	Match Results
<% end %>

<div class="row">
	<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

		<h2>Match Results</h2>
		<%= simple_form_for(@match, html: { role: 'form' }) do |f| %>
			<div class="date-select">
				<%= f.input :played_at, collection: match_date_select(5), label: 'You played the match', selected: @match.played_at %>
			</div>

			<div class="row">
				<div class="col-xs-2 text-center text-muted">Game</div>
				<div class="col-xs-5 text-center"><%= @match.challenger.name %></div>
