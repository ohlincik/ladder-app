						<%= @match.challenger_game1 %>
					</a>
					<%= f.hidden_field :challenger_game1 %>
				</div>
				<div class="col-xs-5 game-output">
					<a class="btn btn-default btn-lg challenged-player">
						<%= @match.challenged_player_game1 %>
					</a>
					<%= f.hidden_field :challenged_player_game1 %>
				</div>
