$borderRadiusXLarge: 10px;

body {
  padding-top: 70px;
}

.jumbotron {
  hr {
    border-top-color: #ddd;
    border-top-width: 2px;
  }
}

/* Footer
-------------------------------------------------- */

.footer {
  text-align: center;
  padding: 30px 0;
  margin-top: 40px;
  border-top: 1px solid #e5e5e5;
  background-color: #f5f5f5;
  p {
    margin-bottom: 0;
    color: #777;
  }
}

.footer-links {
  margin: 10px 0;
  li {
    display: inline;
    padding: 0 2px;
    &:first-child {
      padding-left: 0;
    }
  }
}

/* Devise Error Messages
-------------------------------------------------- */

div#error_explanation {
  color: #b94a48;
  background-color: #f2dede;
  border:1px solid #eed3d7;
  border-radius:6px;
  padding:20px;
  margin-bottom: 2em;
  h2 {
    font-size:1.1em;
    line-height: 1.5em;
  }
}

/* Player Pages
-------------------------------------------------- */

.rank-badge {
  background-color: #fcf8e3;
  border: 1px solid #fbeed5;
  border-radius: 10px;
  padding: 10px;
  p {
    font-size: 0.88em;
    text-transform: uppercase;
    text-align: center;
    &.rank {
      font-size: 4em;
      font-weight: bold;
      line-height: 90%;
    }
    &.no-rank {
      font-size: 1.6em;
      font-weight: bold;
      margin: 1em 0;
      line-height: 120%;
    }
  }
}

.challenge-badge {
  color: #3a87ad;
  background-color: #d9edf7;
  border: 1px solid #bce8f1;
  border-radius: 10px;
  padding: 15px;
  margin-bottom: 2em;
  hr {
    border-top-color: #bce8f1;
  }
}

.top-of-ladder-badge {
  color: #468847;
  background-color: #dff0d8;
  border: 1px solid #d6e9c6;
  border-radius: 10px;
  padding: 15px;
}

.no-records {
  text-align: center;
  padding:2em 1em;
  background-color: #f8f8f8;
  border-radius: 6px;
  margin-top: 3em;
}

.date-select {
  background-color: #eee;
  margin: 20px 0;
  padding: 20px 20px 5px 20px;
  border-radius: 10px;
  .form-group {
    select {
      font-size: 18px;
      height: 38px;
    }
    input[disabled] {
      background-color: #f8f8f8;
    }
  }
}

.game, .game-output {
  padding-top: 10px;
  padding-bottom: 10px;
  text-align: center;
}

.game {
  font-size: 30px;
  font-weight: bold;
}

.game-input {
  padding-top: 5px;
  padding-bottom: 5px;
  table {
    width: 100%;
  }
  td {
    vertical-align: middle;
    width: 20%;
    text-align: center;
    border: solid 1px #ccc;
  }
  a {
    display: block;
    width: 100%;
    padding: 5px 0;
    background-color: #eee;
    color: #444;
  }
  a:hover {
    text-decoration: none;
    color: #fff;
    background-color: #888;
  }
}

.edit_match hr {
  margin-top: 7px;
  margin-bottom: 7px;
}